{% load gml_extras %}
<gml spec='1.0'>
<tag>
<header>
  <client>
    <name>Markup</name>
    <time>{{ date_drawn }}</time>
  </client>
  <environment>
    <up>
      <x>0.0</x>
      <y>-1.0</y>
      <z>0.0</z>
    </up>
    <screenBounds>
      <x>{{ obj_decoded.bWidth }}</x>
      <y>{{ obj_decoded.bHeight }}</y>
      <z>0</z>
    </screenBounds>
  </environment>
</header>
<drawing>
  {% for points in obj_decoded.strokes %}
  <stroke>
    {% for point in points %}
    <pt>
      <x>{{ point.x|normalize_point:obj_decoded.bWidth }}</x>
      <y>{{ point.y|normalize_point:obj_decoded.bHeight }}</y>
      <t>{{ point.time }}</t>
    </pt>
    {% endfor %}
  </stroke>
  {% endfor %}
</drawing>
</tag>
</gml>

